<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_marginBottom="8dp" android:elevation="24dp"
    app:cardBackgroundColor="@color/colorAccent">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="16dp">

    <ImageView
        android:id="@+id/listIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"/>
    <TextView
        android:id="@+id/siteTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/listIcon"
        android:textSize="30sp"
        android:layout_alignTop="@+id/listIcon"
        android:layout_marginTop="0dp" android:layout_toStartOf="@id/site_checkBox"/>
    <TextView
        android:id="@+id/siteLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/siteTitle"
        android:layout_toEndOf="@+id/listIcon"
        android:textSize="18sp" android:layout_toStartOf="@id/site_checkBox"/>
    <TextView
        android:id="@+id/siteLng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/siteLat"
        android:layout_toEndOf="@+id/listIcon"
        android:textSize="18sp" android:layout_toStartOf="@id/site_checkBox"/>
    <CheckBox
        android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_alignParentEnd="true"
        android:id="@+id/site_checkBox" android:layout_width="wrap_content"/>
  </RelativeLayout>
</android.support.v7.widget.CardView>